<html>
  <head>
    <meta charset="UTF-8">
    <title>WebSocket Client</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <script type="text/javascript" src="http://cdn.rawgit.com/hernan604/JooseLoader/master/js/joose.js"></script>
    <script type="text/javascript" src="/v1/js/JooseLoader.js"></script>
    <style>

      #channel-list,
      #user-channel-list {
          float: right;
          border: 1px solid #F0f;
          width: 100px;
          list-style: none;
      }

      textarea {
          background: #FFF;
          resize: none;
          border: 0px;
          width: 100%;
          margin: 0;
      }

      textarea#log {
          height: 79%;
      }

      textarea#msg {
          border-top: 1px solid #ccc;
          height: 20%;
          margin-left: 10px;  
      }

      .user-channels ,
      .complete-list {
          float: right;
          width: 145px;
      }

      ul#log {
          list-style: none;
          height: 80%;
          padding: 0;
          margin: 0;
          overflow: hidden;
          overflow-y: scroll;
      }

      ul#log li {
      }

      ul#log li > span.username {
          vertical-align: top;
      }

      .keydown {
          transition: background 5s ease;
          background: #FFF;
          color: #000;
      }   

      .keydown {
          transition: background .2s ease;
          background: #4D394B;
          color: #A1919F;
      }

      .btn.send {
          height: 20%;
          width: 100%;
      }

      .userpic {
          background: url(data:image/png;base64,);
          height: 60px;
          width: 60px;
          no-repeat
          left center;
          padding: 5px 0 5px 25px;
      }

      .msg .username {
          font-weight: bold;
      }

      .msg .date {
          color: #ccc;
          margin-left: 5px;
      }

      .msg {
          margin-top: 10px;
          margin-left: 10px;
      }

      .msg .notice {
          color: #F00;
      }

    </style>
    <script>


    window.jloader = new JooseLoader({
        prefix : '/v1/js/app/',
    });
    jloader.load('AppChat');
    var ws_url = 'ws://' + window.location.host + '/chat_ws/<%= $self->param('channel') %>';
    var mybase = new AppChat({
        ws      : new WebSocket( ws_url ),
        channel : '#<%= $self->param('channel') %>',
        deps    : [
            jloader.load('AppChatEvent'),
//          jloader.load('AppChatInterface'),
        ]
    });
    mybase.init();

    </script>
  </head>
<body>

<div class="container-fluid">
    <div class="row">
        <ul class='controls'>
            <li class='users'>Users</li>
        </ul>
    </div>
    <div class="row">
         <ul id="log" chan='#<%= $self->param('channel') %>' readonly></ul>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <div class="row">
                <textarea type="text" id="msg" placeholder='Enter text here..'/></textarea>
            </div>
        </div>
        <div class="col-sm-2">
            <div class="row">
                <button class='btn send'>Send</button>
            </div>
        </div>
    </div>
</div>

</body>
</html>
